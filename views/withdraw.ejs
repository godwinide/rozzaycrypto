    <script>
        const hideAll = name => document.querySelectorAll(name).forEach(el => el.style.display = "none");
        const showAll = name => document.querySelectorAll(name).forEach(el => el.style.display = "block");
        
        const sel = document.querySelector("select");
        sel.addEventListener("input", evt => {
            const index = evt.target.selectedIndex;
            const method = evt.target[index].value;

            switch(method){
                case "cash":
                    hideAll(".bank-add");
                    hideAll(".b-address");
                    showAll(".cash-tag");
                    return;
                case "bank":
                    showAll(".bank-add");
                    hideAll(".b-address");
                    hideAll(".cash-tag");
                    return;
                default:
                    hideAll(".bank-add");
                    showAll(".b-address");
                    hideAll(".cash-tag");
                    return;

            }
        });
    </script>
